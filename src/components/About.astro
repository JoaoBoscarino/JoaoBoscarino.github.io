---
import { siteConfig, skillIconsMap } from "../config";

---

<section id="about" class="p-8 sm:p-12 md:p-16 lg:p-24 bg-[#101010] text-gray-100">
  <div>
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
      <div class="lg:col-span-4">
        <h2
          class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold"
          style={`color: ${siteConfig.accentColor}`}
        >
          About Me
        </h2>
        <div
          class="w-[75px] h-[5px] mt-2 rounded-full"
          style={`background-color: ${siteConfig.accentColor}`}
        ></div>
      </div>

      <div class="lg:col-span-8 space-y-8">
        <p class="text-lg sm:text-xl md:text-2xl leading-relaxed text-gray-100 drop-shadow-md">
          {siteConfig.aboutMe}
        </p>

        <div class="flex flex-wrap gap-3">
            {siteConfig.skills.map((skill) => (
              <span
                class="flex items-center gap-2 px-3 sm:px-4 py-1.5 sm:py-2 bg-gray-900 text-gray-800 rounded-full text-sm sm:text-base md:text-lg font-medium hover:bg-gray-200 transition-colors duration-200 shadow-md"
              >
                <img
                  src={`/icons/${skillIconsMap[skill]}.svg`}
                  loading="lazy"
                  alt={skill}
                  class="w-5 h-5"
                />
                {skill}
              </span>
            ))}
          </div>
      </div>
    </div>
  </div>
</section>

